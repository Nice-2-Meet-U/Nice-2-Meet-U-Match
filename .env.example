# Google Cloud SQL Configuration
INSTANCE_CONNECTION_NAME=your-project:region:instance-name
DB_USER=your_db_user
DB_PASS=your_db_password
DB_NAME=matches
PRIVATE_IP=false

# Service URLs for HATEOAS and inter-service communication
# If all services are deployed at the same URL (monolith mode), set only SERVICE_BASE_URL
SERVICE_BASE_URL=http://localhost:8000

# Optional: Override individual service URLs for true microservices deployment
# If not set, they will inherit from SERVICE_BASE_URL
# POOL_SERVICE_URL=http://pool-service:8001
# MATCH_SERVICE_URL=http://match-service:8002
# DECISION_SERVICE_URL=http://decision-service:8003

# Optional: SQL query logging
SQL_ECHO=false

# Cloud Run will set this automatically
PORT=8080
