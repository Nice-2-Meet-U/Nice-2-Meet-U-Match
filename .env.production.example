# Production Environment Variables for Google Cloud Run
# Copy this to .env.production and replace with actual Cloud Run URLs

# Database Configuration
DATABASE_URL=mysql+pymysql://user:password@/dbname?unix_socket=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Service URLs (replace with actual Cloud Run service URLs after deployment)
POOL_SERVICE_URL=https://pool-service-PROJECT_ID.run.app
MATCH_SERVICE_URL=https://match-service-PROJECT_ID.run.app
DECISION_SERVICE_URL=https://decision-service-PROJECT_ID.run.app
USER_SERVICE_URL=https://user-service-PROJECT_ID.run.app

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Nice2MeetU-Match

# Security (IMPORTANT: Use Secret Manager in production)
SECRET_KEY=your-secret-key-from-secret-manager
CORS_ORIGINS=["https://yourdomain.com"]

# Service-specific config
# For pool-service, match-service, decision-service: DATABASE_URL required
# For user-service: Only service URLs required (no DATABASE_URL)
