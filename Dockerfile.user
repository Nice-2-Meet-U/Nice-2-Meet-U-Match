FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy necessary files for user service (orchestrator)
COPY frameworks/ ./frameworks/
COPY user/ ./user/
COPY user_main.py .

# Expose port
EXPOSE 8080

# Run user service
CMD ["uvicorn", "user_main:app", "--host", "0.0.0.0", "--port", "8080"]
