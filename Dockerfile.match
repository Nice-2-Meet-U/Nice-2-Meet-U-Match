FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy only necessary files for match service
COPY frameworks/ ./frameworks/
COPY match/ ./match/
COPY match_main.py .

# Expose port
EXPOSE 8080

# Run match service
CMD ["uvicorn", "match_main:app", "--host", "0.0.0.0", "--port", "8080"]
